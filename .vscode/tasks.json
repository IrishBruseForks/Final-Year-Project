{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve UI",
      "type": "shell",
      "command": "npm run dev",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOn": "Install Packages",
      "options": {
        "cwd": "./src/Frontend"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Install Packages",
      "type": "shell",
      "command": "npm install",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "options": {
        "cwd": "./src/Frontend"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Generate Types from Go",
      "type": "shell",
      "command": "tygo generate",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "options": {
        "cwd": "./src/Backend"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Generate SQL schema from dbml",
      "type": "shell",
      "command": "dbml2sql database.dbml --mysql -o database.sql",
      "options": {
        "cwd": "./src/Backend"
      },
      "problemMatcher": "$go"
    }
  ]
}
