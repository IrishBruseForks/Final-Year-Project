  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm run dev",
      "type": "shell",
      "command": "npm run dev",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOn": "Install Packages",
      "options": {
        "cwd": "./src/Frontend"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "npm i",
      "type": "shell",
      "command": "npm install",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "options": {
        "cwd": "./src/Frontend"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "air",
      "type": "shell",
      "command": "air",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "options": {
        "cwd": "./src/Backend"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Deploy UI",
      "type": "shell",
      "command": "npm run deploy",
      "dependsOn": "Install Packages",
      "options": {
        "cwd": "./src/Frontend"
      },
      "problemMatcher": "$tsc"
    },
  ]
