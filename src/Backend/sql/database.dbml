Project chatalyst {
  database_type: 'MySQL'
  Note: 'Collage final year project where we are making a chat application with bots.'
}

Table Users {
    id char(32) [pk]
    username text
    picture text
    isBot boolean
}

Table Channels {
    id char(36) [pk]
    name text
    picture text
}

Table Messages {
    id char(36) [pk]
    channelId char(36)
    sentBy char(32)
    sentOn timestamp
    content text
    image varchar(255)
}

// Relations
Ref Users_Channels: Users.id <> Channels.id
Ref: Messages.channelId > Channels.id
